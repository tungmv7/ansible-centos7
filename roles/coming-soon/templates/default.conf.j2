
server {
        listen          {{conf_port}} default_server;
        listen          [::]:{{conf_port}} default_server;
        server_name     {{conf_domain}};
        root            {{conf_root_path}};

        location / {
            index index.html index.htm;
        }

        location ~ \.htaccess {
            deny all;
        }

        location ~* \.(gif|jpg|jpeg|png|css|js)$ {
            expires max;
        }

        location ~ /\.(ht|svn|git) {
            deny all;
        }  
}